<%= form_for([@task.project, @task]) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, class: 'form-control', style: 'background-color: rgb(5, 62, 115); color: rgb(194, 196, 232)' %>
  </div>
  <div class="form-group">
    <%= f.label :description %><br />
    <%= f.text_area :description, class: 'form-control', style: 'background-color: rgb(5, 62, 115); color: rgb(194, 196, 232)' %>
  </div>
  <div class="form-group">
    <%= f.label :status %><br />
    <%= f.select :status, Task::STATUS_OPTIONS, {}, class: 'form-control', style: 'background-color: rgb(5, 62, 115); color: rgb(194, 196, 232)' %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn", style: 'background-color: rgb(5, 62, 115); color: rgb(194, 196, 232)' %>
  </div>
<% end %>
